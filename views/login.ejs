<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
  <%- include("partials/header.ejs") %>

   <div class="login-container">
    <% if (typeof error !== "undefined") { %>
    <p style="color: black; background-color: red; border-radius: 5px; "><%= error %></p>
    <% } %>
  <h2>Login</h2>
  <form action="/login" method="post">
    <div class="form-group">
      <input type="email" placeholder="Email"  name="Email" required>
    </div>
    
    <div class="form-group password-wrapper">
      <input type="password" id="password" placeholder="Password" name="Password"  required>
      <span class="toggle-password" onclick="togglePassword()">👁</span>
    </div>
    
    <button type="submit">Sign In</button>
 
  </form>
</div>

   
     <section class="section-2">
       <h2 class="sec-h2">Not yet rigistered ?</h2>
       <p style="margin-bottom: 20px; color: black;">Click the button below to register</p>
       <form action="/register" method="get" class="sec-form">
       <button type="submit" class="sec-btn">Register Now </button>
       </form>
     </section>

 <%- include("partials/footer.ejs") %>
</body>

<script>
  function togglePassword() {
    const passwordInput = document.getElementById('password');
    const toggle = document.querySelector('.toggle-password');
    if (passwordInput.type === 'password') {
      passwordInput.type = 'text';
      toggle.textContent = '🙈'; // Hide icon
    } else {
      passwordInput.type = 'password';
      toggle.textContent = '👁'; // Show icon
    }
  }
  </script>
</html>